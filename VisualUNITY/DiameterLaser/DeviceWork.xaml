                    <Button Click="diameterDiffrence_Click" x:Name="diameterDifferenceText" Margin="0,0,0.4,0" Background="Transparent" Content="0" Foreground="Black" BorderBrush="Transparent" FontSize="20"  Height="40" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Margin="8 10 8 0">

                    <Button Click="diameterSet_Click" x:Name="diameterSetText" Margin="0,0,0.4,0" Background="Transparent" Content="0" Foreground="Black" BorderBrush="Transparent" FontSize="20"  Height="40" VerticalAlignment="Center"/>
